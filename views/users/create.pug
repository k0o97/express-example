extends ../layout/common

block content
    h1 Create User
    if errors
        each error in errors
            .alert.alert-primary= error
    
    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name: 
            input.form-control(name="name", type="text", id="name", value=values ? values.name : "") 
        .form-group
            label(for="phonenumber") Phone number: 
            input.form-control(name="phonenumber", type="text", id="phonenumber", value=values ? values.phonenumber : "")  
        button.btn.btn-primary Create