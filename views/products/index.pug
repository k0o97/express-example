extends ../layout/common

block content
    h1 Products
    form.pt-2(action="#", method="GET", class="d-flex align-items-end")
        input(type="text", name="q", value=query, class="form-control")
        button.btn.btn-primary.ml-2 Search

    .row
        each product in products
            .col.pb-2
                .card(style='width: 15rem;')
                    img.card-img-top(src=product.image alt='Card image cap')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='/cart/add/' + product.id) Add to card
    
    nav(aria-label='Page navigation example')
        ul.pagination.justify-content-end
            li.page-item
                a.page-link(href='/products?page=' + prePage) Previous
            li.page-item
                a.page-link(href='/products?page=' + currentPage)= currentPage
            li.page-item
                a.page-link(href='/products?page=' + nextPage)= nextPage
            li.page-item
                a.page-link(href='/products?page=' + nextPage) Next