extends ../layout/common

block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-primary= error
    
    form(method="POST")
        .form-group
            label(for="email") Email 
            input.form-control(name="email", type="text", id="email", value=values ? values.email : "") 
        .form-group
            label(for="password") Password 
            input.form-control(name="password", type="password", id="password", value=values ? values.password : "")  
        button.btn.btn-primary Login